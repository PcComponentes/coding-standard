{
  "name": "pccomponentes/coding-standard",
  "description": "PcComponentes Coding Standard for PHP_CodeSniffer complements Consistence Coding Standard by providing sniffs with additional checks.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Zoilo Mora",
      "email": "zoilo.mora@pccomponentes.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "PcComponentesCodingStandard\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PcComponentesCodingStandard\\": "tests"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "slevomat/coding-standard": "^7.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/var-dumper": "^5.4"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
